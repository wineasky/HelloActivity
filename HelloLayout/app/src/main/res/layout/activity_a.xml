    <LinearLayout style="@style/LinearLayoutTheme"
       android:layout_weight="0.2">
        <TextView style="@style/TextViewA" android:text="@string/text_a_first" />
        <TextView style="@style/TextViewA" android:text="@string/text_a_second" />
        <TextView style="@style/TextViewA" android:text="@string/text_a_last" />
